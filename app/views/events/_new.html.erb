<%= form_for(@event, url: {action: "create", anchor: "newEventForm"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h6><%= pluralize(@event.errors.count, "error") %> prohibited this event from being created:</h6>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      <br />
    </div>
  <% end %>

  <style>
      /****  TEMPORARY STYLE FOR CURRENT VERSION OF THE FORM ****/
      #eventForm{
        width:80%;
        margin:0 auto;
      }

      .option-large{
        width: auto !important;
      }
  </style>

<div id="eventForm">
  <form>
    <div class="control-group">
      <div class="controls">
       <%= f.text_field :name, :placeholder => "Event Name", :class => "input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_area :description, :placeholder => "Description", :rows => 5, :class => "input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.datetime_select :time, {:default => 1.week.from_now, :start_year => DateTime.now.year, :ampm => true}, {:class => "option-large"} %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :admin, :placeholder => "Your Name", :class => "input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.email_field :email, :placeholder => "Your Email", :class => "input-xxlarge" %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Create Event", :class => 'btn btn-primary pull-right' %>
      </div>
    </div>
  </form>
</div>

<br/>
<h1>&nbsp;</h1>

<% end %>
